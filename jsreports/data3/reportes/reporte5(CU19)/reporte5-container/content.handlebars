{{!-- Contenedor que contiene Header y Footer del Reporte --}}

<html>
    <head>
          <meta content="text/html; charset=utf-8" http-equiv="Content-Type">   
         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/metro/4.1.5/css/metro.min.css">
         <style>
            /* Estilos para el contenedor de reporte */
            * { 
              box-sizing: border-box 
            }

            html, body {
              margin: 0px; padding: 0px
            }

            .main {
              display: flex;
              flex-direction: column;
              justify-content: space-between;
              width: 100%;
              height: 100%;
            }

            .header {
              width: 100%; padding-top: 20px;
            }

            .footer {
              width: 100%;
              padding-bottom: 20px;
              border-top: 1px solid grey;
              display: flex;
            }

            .footer div { flex: 1 }

            .footer .numero-pagina { text-align: right }

        </style>
    </head>
    <body>
        {{#each $pdf.pages}}
          {{#if @index}}
            <div style="page-break-before: always;"></div>
          {{/if}}
          <main class="main"> 
            <header class="header">             
              {{#with (lookup ../$pdf.pages @index)}}
                {{!-- <h1>Este es el header</h1> --}}
              {{/with}}  
            </header>
            <footer class="footer">
              <div class="texto-footer">
                <span>{{@root.encabezado.cTextoReporte }}</span>
              </div>
              <div class="numero-pagina">
                <span>PÃ¡gina {{getPageNumber @index}} de {{getTotalPages ../$pdf.pages}}</span>
              </div>
            </footer>
          </main>
        {{/each}}
    </body>
</html>
