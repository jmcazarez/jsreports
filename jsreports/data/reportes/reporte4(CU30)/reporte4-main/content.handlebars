
<html>
    <head>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <style>
            {#asset reporte4-styles.css @encoding=utf8}
        </style>
    </head>
    <body>

        <header>
            <div class="logo">
                {{!-- <img src="{{cLogo}}" /> --}}
                <img src="{#asset logo-agrinet.png @encoding=dataURI}" />
            </div>
            <div class="titulo-reporte">
                <h1> {{cTitulo}} </h1>
                <h2> {{cTituloFiltro}} </h2>
                <p> {{cDireccion}} </p>
            </div>
            <div>
                <!--  -->
            </div>
        </header>

        <table class="table table-header">
            <thead>
                <tr>
                    <th rowspan="3" class="logo">
                        <img src="{#asset logo-agrinet.png @encoding=dataURI}" />
                    </th>
                    <th colspan="6" class="titulo-reporte">
                        <h3> {{cTitulo}} </h3>
                    </th>
                </tr>
                <tr>
                    <th colspan="6" class="info-reporte">
                        <h2>  Información actualizada al día {{cFechaAcsualizacion}} </h2>
                    </th>
                </tr>
                <tr>
                    <th colspan="6" class="direccion-reporte">
                        {{cDireccion}}
                    </th>
                </tr>
                <tr>
                    <th colspan="6" class="info-reporte">
                        {{cTexto}}
                    </th>
                </tr>

                <tr>
                    <td colspan="7">
                        &nbsp;
                    </td>
                </tr>
            </thead>
        </table>


        <table id="productos">
            <thead>
                 <tr class="titulos-tabla">
                    <th class="th">Tipo</th>
                    <th class="th">Nombre Empresa</th>
                    <th class="th">RFC/Taxid</th>
                    <th class="th">Origen</th>
                    <th class="th">Domicilio</th>
                    <th class="th">Teléfono</th>
                    <th class="th">Correo</th>
                    <th class="th">Url sitio web</th>
                </tr>


            </thead>

            <tbody>
                {{#each items}}
                <tr>
                    <td>{{ this.cTipo }}</td>
                    <td>{{ this.cEmpresa }}</td>
                    <td>{{ this.cRegistroIdentificador }}</td>
                    <td>{{ this.cTipoEmpresa }}</td>
                    <td>{{ this.cDireccionSucursalMatriz }}</td>
                    <td>{{ this.cTelefonoOficinaMatriz }}</td>
                    <td>{{ this.cEmail }}</td>
                    <td>{{this.cURLPaginaWebEmpresa}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
         {{#each $pdf.pages}}
          {{#if @index}}
            <div style="page-break-before: always;"></div>
          {{/if}}
          <main class="main"> 
            <header class="header">             
              {{#with (lookup items @index)}}
                <h1>Este es el header</h1>
              {{/with}}  
            </header>
            <footer class="footer">
              <div class="texto-footer">
                <span>Texto reporte: {{textoReporte}}</span>
              </div>
              <div class="numero-pagina">
                <span>Página {{getPageNumber @index}} de {{getTotalPages items}}</span>
              </div>
            </footer>
          </main>
        {{/each}}
    </body>
</html>
