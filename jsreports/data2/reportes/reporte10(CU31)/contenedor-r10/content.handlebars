{{!-- Contenedor que contiene Header y Footer del Reporte --}}

<html>
    <head>        
         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/metro/4.1.5/css/metro.min.css">
         <style>
            {#asset contenedor-r10-styles.css @encoding=utf8}
        </style>
    </head>
    <body>
        {{#each $pdf.pages}}
          {{#if @index}}
            <div style="page-break-before: always;"></div>
          {{/if}}
          <main class="main"> 
            <header class="header">             
              {{#with (lookup ../$pdf.pages @index)}}
                {{!-- <h1>Este es el header</h1> --}}
              {{/with}}  
            </header>
            <footer class="footer">
              <div class="texto-footer">
                {{!-- <span>Texto reporte: {{textoReporte}}</span> --}}
              </div>
              <div class="numero-pagina">
                <span>PÃ¡gina {{getPageNumber @index}} de {{getTotalPages ../$pdf.pages}}</span>
              </div>
            </footer>
          </main>
        {{/each}}
    </body>
</html>
