{{!-- Reporte 4 --}}

<html>
    <head>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <style>
            {#asset reporte-styles.css @encoding=utf8}
        </style>
    </head>
    <body>
        <header>
            <div class="logo">
                {{!-- <img src="{{cLogo}}" /> --}}
                <img src="{#asset logo-agrinet.png @encoding=dataURI}" />
            </div>
            <div class="titulo-reporte">
                <h1> {{cTitulo}} </h1>
                <h2>  Información actualizada al día {{now}} </h2>
                {{!-- <h2> {{cTituloFiltro}} </h2> --}}
                <p> {{cDireccion}} </p>
                <p>{{cTexto}} </p>
            </div>
            <div>
                <!--  -->
            </div>

            <style>
                .center {
                position: fixed;
                    top: 50%;
                    left: 50%;
                    margin-top: -150px;
                    margin-left: -150px;
                }  

                .center > img {
                    width: 300px;
                    height: 300px;
                    opacity: 0.3;
                }
            </style>

        </header>

        <main>
             <table class="table">
                <thead>
                    <tr class="titulos-tabla">
                        <th class="th">Tipo</th>
                        <th class="th">Nombre Empresa</th>
                        <th class="th">RFC/Taxid</th>
                        <th class="th">Origen</th>
                        <th class="th">Domicilio</th>
                        <th class="th">Teléfono</th>
                        <th class="th">Correo</th>
                        <th class="th">Url sitio web</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                    <tr>
                        <td>{{ this.cTipo }}</td>
                        <td>{{ this.cEmpresa }}</td>
                        <td>{{ this.cRegistroIdentificador }}</td>
                        <td>{{ this.cTipoEmpresa }}</td>
                        <td>{{ this.cDireccionSucursalMatriz }}</td>
                        <td>{{ this.cTelefonoOficinaMatriz }}</td>
                        <td>{{ this.cEmail }}</td>
                        <td>{{this.cURLPaginaWebEmpresa}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </main>

        <div class="center">
            <img src="{{cWaterMark}}" />
        </div>

    </body>
</html>
